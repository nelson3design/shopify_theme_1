

<div class="container">

    <div class="row my-5">
        <h3>{{ page.title }}</h3>
    </div>
    <div class="accordion accordion-flush" id="accordionFAQ">
        {% for block in section.blocks %}
        <div class="accordion-item">

            <h2 class="accordion-header" id="collapse-header-{{ block.id }}">
            <button class="accordion-button collapsed"
             type="button"
              data-bs-toggle="collapse"
               data-bs-target="#collapse-{{ block.id }}"
                aria-expanded="false"
                 aria-controls="{{ block.id }}">

                {{ block.settings.title }}

                </button>

            </h2>

            <div class="accordion-collapse collapse p-3"
             id="collapse-{{ block.id }}"
              aria-labelledby="collapse-header-{{ block.id }}"
               data-bs-parents="#accordionFAQ">

                {{ block.settings.answer }}
            </div>

        </div>
            
        {% endfor %}

    </div>
</div>

{% schema %}
{
    "name":"FAQ",
    "blocks":[
    {
        "name":"FAQ Items",
        "type":"faq",
        "settings":[
          {
            "type":"text",
            "id":"title",
            "label":"title",
            "default":"FAQ Title Example"
          },
          {
            "type":"richtext",
            "id":"answer",
            "label":"Answer"
          }
        ]
    }
    ]
}
{% endschema %}