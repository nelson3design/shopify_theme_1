
<section class="inner-hero-section">

    {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | img_url: 'grande' }}" alt="">
    {% else %}
       {% capture current %}{% cycle 1,2 %}{% endcapture %}
       {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}


    <div class="container py-5">

        <div class="row">
           <div class="col-lg-6 col-md-8 mx-auto">
             <h2>{{ section.settings.title }}</h2>
               {{ section.settings.description }}
             <a class="btn btn-secondary" href=" {{ section.settings.button_link }} ">{{ section.settings.button_label }}</a>
           </div>
        </div>
    </div>
</section>


{% schema %}
{
    "name":"Hero",
    "class":"hero-section",

    "settings":[
    {
    "type":"image_picker",
    "id":"image",
    "label":"Heading Background Title"
    },
    {
        "type":"text", 
        "id":"title",
        "default":"example Heading",
        "label":"Heading Title"
    },
    {
    "type":"richtext",
    "id":"description",
    "default":"<p> paragraph text</p>",
    "label":"Heading Description"
    },
    {
    "type":"text",
    "id":"button_label",
    "default":"button",
    "label":"Heading Button Label"
    },
    {
    "type":"url",
    "id":"button_link",
    "label":"Heading Button Link"
    }

    ],
    "presets":[
    {
        "category":"Hero",
        "name":"Simple Hero"
    }
    ]
}
{% endschema %}